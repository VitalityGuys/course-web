    <!--    <mvc:resources location="/js/" mapping="/js/**"/>-->
    <!--    <mvc:resources location="/imgs/" mapping="/imgs/**"/>-->
    <!--    <mvc:resources location="/pages/" mapping="/pages/**"/>-->

</beans>